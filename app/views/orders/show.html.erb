<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">

    <h3>Email: <%= @order.email %></h3>
    <p></p>
    <p></p>

    <h3>Order Total: <%= humanized_money_with_symbol Money.new(@order.total_cents, 'USD') %></h3>



    <h4>Thank you for your order!</h4>

    <p></p>
    <p></p>
    <p></p>
  
      <h3>Line Items</h3>

  </div>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Product</th>
          <th>Item Price</th>
          <th>Quantity</th>
          <th>Total Price</th>
        </tr>
      </thead>
      
      <tbody>
  <% @order.line_items.each do |line_item| %>
    <tr>
      <td>
        <%= image_tag line_item.product.image.tiny.url, alt: line_item.product.name %>
        <h4><%= line_item.product.name %></h4>
        <p><%= line_item.product.description %></p>
      </td>
      <td><%= humanized_money_with_symbol line_item.item_price %></td>

      <td><%= line_item.quantity %></td>
      <td><%= humanized_money_with_symbol line_item.total_price %></td>
    </tr>
  <% end %>
</tbody>
<tfoot>
        <tr>
          <th colspan="3">
            TOTAL:
          </th>
          <th>
<span><%= humanized_money_with_symbol Money.new(@order.total_cents, 'USD') %></span>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
